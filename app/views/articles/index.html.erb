<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
      <br><time><%= article.created_at.to_date.strftime("%d %B, %Y") %></time>
    </li>
  <% end %>
</ul>

<%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
